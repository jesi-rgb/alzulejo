{
	"name": "alzulejo",
	"version": "0.0.10",
	"description": "Islamic geometric pattern and tessellation generator for Svelte 5 with reactive geometry and canvas rendering",
	"type": "module",
	"author": "Jesús Rascón",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jesi-rgb/alzulejo.git"
	},
	"keywords": [
		"svelte",
		"tessellation",
		"islamic-patterns",
		"geometry",
		"canvas",
		"patterns",
		"geometric-art"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"publint": "^0.3.14",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	}
}
